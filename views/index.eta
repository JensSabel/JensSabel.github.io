<h1>Post a message!</h1>
<form method="POST">
  Sender: <input type="text" name="sender" /></br>
  Message: <input type="text" name="message" /></br>
  <input type="submit" value="Submit!" />
</form>

<ul>
<% it.messages.forEach((m) => { %>
  <li>
    <%= m.sender %>: <%= m.message %>
  </li>
<% }); %>
</ul>